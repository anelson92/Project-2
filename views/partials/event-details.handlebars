<div class="row">
            <div class="col s6 m6">
            <div class="small card">
                <div class="card-image">
                <img src="{{image-url}}">
                <span class="card-title">{{event_name}}</span>
                <a class="btn-floating halfway-fab waves-effect waves-light indigo lighten-2"><i class="material-icons">check</i></a>
                </div>
                <div class="card-content">
                <p>
                    {{event_type}}
                </p>
                <p>
                    {{event_date}}
                </p>
                <p>
                    {{event_loc}}
                </p>
                <p>
                    {{description}}
                </p>
                <p>
                    Hosted by:
                    {{event_owner}}
                </p>
                </div>
            </div>
            </div>